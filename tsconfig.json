{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/**/*.ts", "./src/**/**/*.tsx"],
  "exclude": ["node_modules"]
}
