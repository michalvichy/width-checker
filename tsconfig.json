{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
